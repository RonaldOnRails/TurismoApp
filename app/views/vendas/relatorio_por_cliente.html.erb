			<tr>
				<th id="nome">Nome</th>
				<th id="valor">Valor</th>
			</tr>
			<% @vendaFisica.each do |cliente|%>
			<tr>
				<%aux1=PessoaFisica.find_by_id(cliente.pessoa_fisica_id)
