
<div class="container">
	<div class="bloco1">
		Clientes do tipo Pessoa Fisica:
		<table border="1" summary="Esta tabela mostra os nomes dos clientes do tipo Pessoa Fisica com seus respectivos gastos.">
			<tr>
				<th id="nome">Nome</th>
				<th id="valor">Valor</th>
			</tr>
			<% @vendaFisica.each do |cliente|%>
			<tr>
				<%aux1=PessoaFisica.find_by_id(cliente.pessoa_fisica_id)
				if aux1 && aux1.nome%>
				<td headers="nome"><%= aux1.nome%></td>
				<td headers="valor"><%= cliente.valor_total %></td>
			</tr>
			<% end %>
		</table>
	</div>
	<hr>
	<div class="bloco2"></div>
		Clientes do tipo Pessoa Juridica:
		<table border="1" summary="Esta tabela mostra os nomes dos clientes do tipo Pessoa Juridica com seus respectivos gastos.">
			<tr>
				<th id="nome">Nome</th>
				<th id="valor">Valor</th>
			</tr>
			<% @vendaJuridica.each do |cliente| %>
			<tr>
				<%aux2=PessoaJuridica.find_by_id(cliente.pessoa_juridica_id)
				if aux2 && aux2.nome%>
					<td headers="nome"><%= aux2.nome%></td>
					<td headers="valor"><%= cliente.valor_total %></td>
				<%end%>
			</tr>
			<% end %>
		</table>
	</div>
	<hr>
	<div class="bloco-charts">

	</div>
</div>
<%%>
<html>
  <head>
    <script type="text/javascript" src="https://www.google.com/jsapi"></script>
    <script type="text/javascript">
      google.load("visualization", "1", {packages:["corechart"]});
      google.setOnLoadCallback(drawChart);
      function drawChart() {
        var data = google.visualization.arrayToDataTable([
          ['Task', 'Hours per Day'],
          ['Work',     11],
          ['Eat',      2],
          ['Commute',  2],
          ['Watch TV', 2],
          ['Sleep',    7]
        ]);

        var options = {
          title: 'Rellllllatorio'
        };

        var chart = new google.visualization.PieChart(document.getElementById('chart_div'));
        chart.draw(data, options);
      }
    </script>
  </head>
  <body>
    <div id="chart_div" style="width: 900px; height: 500px;"></div>
  </body>
</html>